{
  "info": {
    "name": "KlarText Google OAuth API",
    "description": "Test Google OAuth integration for KlarText",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "OAuth Tests",
      "item": [
        {
          "name": "1. Start Google OAuth (Browser Required)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/google",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "google"]
            },
            "description": "⚠️ This will redirect to Google. Copy URL to browser instead."
          }
        },
        {
          "name": "2. Test OAuth Callback (Simulation)",
          "request": {
            "method": "GET", 
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/google/callback",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "google", "callback"]
            },
            "description": "⚠️ This will fail without proper OAuth state. Use browser flow."
          }
        },
        {
          "name": "3. Regular Login (For Comparison)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Server Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    }
  ]
}